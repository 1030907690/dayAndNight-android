<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_video_detail_scroll_view_tv"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/video_detail_image_tv"
            android:layout_width="220dp"
            android:layout_height="300dp"
            android:layout_gravity="left"
            android:text="" />

        <TextView
            android:id="@+id/video_detail_name_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="221dp"
            android:text="九州" />

        <TextView
            android:id="@+id/video_detail_plot_text_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/video_detail_image_tv"
            android:layout_gravity="left"
            android:text="剧情介绍:" />

        <TextView
            android:id="@+id/video_detail_plot_info_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_detail_plot_text_tv"
            android:text="剧情详细介绍" />

        <TextView
            android:id="@+id/video_detail_drama_series_text_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_detail_plot_info_tv"
            android:text="剧集:" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout_data_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/video_detail_drama_series_text_tv"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ijkplayer_video_navigation_info_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tab_layout_data_tv" />

    </RelativeLayout>
</ScrollView>
